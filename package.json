{
  "name": "cvs-svc-metrics-collector",
  "version": "1.0.0",
  "description": "Collects metrics from dynamodb and pushes to CloudWatch",
  "author": "Martin Kemp",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvsa/cvs-svc-metrics-collector.git"
  },
  "scripts": {
    "audit-dep": "npm audit",
    "build": "npx tsc",
    "clean": "rm -rf .build/",
    "coverage": "jest --coverage",
    "local-package": "npm run build && npm run package",
    "package": "mkdir ${ZIP_NAME} && cp package.json package-lock.json ${ZIP_NAME} && cp -r .build/src/* ${ZIP_NAME}/ && cd ${ZIP_NAME} && npm ci && rm package.json package-lock.json && zip -qr ../${ZIP_NAME}.zip . && cd .. && rm -rf ${ZIP_NAME}",
    "sonar-scanner": "npm run tslint && npm run test && sonar-scanner",
    "test": "jest -c jest.config.js",
    "test-i": "echo 'not implemented' #jest -c jest.config.int.js",
    "tslint": "tslint src/**/*.ts tests/**/*.ts --out .reports/lint_issues.json",
    "tools-setup": "echo 'Nothing to do'"
  },
  "main": "src/handler.js",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.59",
    "@types/jest": "^26.0.7",
    "@types/luxon": "^1.24.3",
    "@types/node": "^14.0.25",
    "@types/node-gzip": "^1.1.0",
    "aws-lambda-mock-context": "^3.2.1",
    "jest": "^26.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "ts-jest": "^26.1.3",
    "tslint": "^6.1.2",
    "tslint-jsdoc-rules": "^0.2.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "aws-sdk": "^2.719.0",
    "aws-xray-sdk": "^3.1.0",
    "luxon": "^1.24.1",
    "node-gzip": "^1.1.2",
    "re2": "^1.15.4",
    "typescript-logging": "^0.6.4"
  },
  "jestSonar": {
    "reportPath": ".reports",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
